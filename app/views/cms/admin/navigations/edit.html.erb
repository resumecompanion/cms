<div class="row">
  <div class="span12">
    <section>
      <div class="page-header">
        <h1>Edit Navigation - <%= @navigation.name %></h1>
      </div>
    </section>

    <%= simple_form_for @navigation, :url => cms.admin_navigation_path(@navigation), :method => "put" do |f| %>
      <%= render "form", :f => f %>
      <div class="form-actions">
        <%= f.submit "Save Changes", :class => "btn btn-primary" %>
        <%= link_to "Cancel", cms.admin_navigations_path, :class => "btn" %>
      </div>
    <% end %>
  </div>
</div>