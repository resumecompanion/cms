<div class="row">
  <div class="span12">
    <section>
      <div class="page-header">
        <h1>Create New Sidebar</h1>
      </div>
    </section>

    <%= simple_form_for @sidebar, :url => cms.admin_sidebars_path(@sidebar), :method => "post" do |f| %>
      <%= render "form", :f => f %>

      <div class="form-actions">
        <%= f.submit "Create Sidebar", :class => "btn btn-primary" %>
        <%= link_to "Cancel", cms.admin_sidebars_path, :class => "btn" %>
      </div>
    <% end %>
  </div>
</div>