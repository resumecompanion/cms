<div class="row">
  <div class="span12">
    <section>
      <div class="page-header">
        <h1>User List</h1>
      </div>
    </section>

    <section>
      <%= link_to "Create New User", cms.new_admin_user_path, :class => "btn btn-primary pull-right", :style => "margin-bottom:30px" %>

      <table class="table table-striped">
        <tr>
          <th>id</th>
          <th>nickname</th>
          <th>email</th>
          <th>admin</th>
          <th>last login</th>
          <th>created at</th>
          <th>actions</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.nickname %></td>
            <td><%= user.email %></td>
            <td><%= user.is_admin? ? "Yes" : "No" %></td>
            <td><%= user.last_sign_in_at %></td>
            <td><%= user.created_at %></td>
            <td>
              <%#= link_to "Show", cms.admin_user_path(user), :class => "btn btn-mini" %>
              <%= link_to "Edit", cms.edit_admin_user_path(user), :class => "btn btn-mini" %>
              <%#= link_to "Delete", cms.admin_user_path(user), :class => "btn btn-danger", :method => "delete", :confirm => "It can't be recoverd, are your sure?" %>
            </td>
          </tr>
        <% end %>
      </table>
    </section>
  </div>
</div>