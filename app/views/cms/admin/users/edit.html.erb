<div class="row">
  <div class="span12">
    <section>
      <div class="page-header">
        <h1>Edit User - <%= @user.nickname %></h1>
      </div>
    </section>

    <%= simple_form_for @user, :url => cms.admin_user_path(@user), :method => "put" do |f| %>
      <%= render "form", :f => f %>
      <div class="form-actions">
        <%= f.submit "Save Changes", :class => "btn btn-primary" %>
        <%= link_to "Cancel", cms.admin_users_path, :class => "btn" %>
      </div>
    <% end %>
  </div>
</div>